<header class="header">

<div class="container-fluid">

	<div class="row">


</div>
</header>



	<%= form_with(model: @negocio_o, local: true) do |form| %>

	  <div class="container-fluid">
	  	<div class="row">
	  		<div class="col-md-12">
	  			<h3>
	  				Registro
	  			</h3>
	  			<div class="row">
	  				<div class="col-md-6">
	  					<div class="form-group" >
								<%= form.label :nombre_empresa, id: params[:nombre_empresa]%>
	  				    <%= text_field_tag(:nombre_empresa,@negocio_o.nombre_empresa, class:'form-control', id:'nombre_empresa') %>
	  				  </div>
           		<br>
							<div class="row form-group">
                     <label for="aprobado" class="col-xs-12 control-label"><i>Aprobacion: </i></label>
                     <div class="btn-group segmented" data-toggle="buttons">
                        <label class="btn del-primary active">
                           <input type="radio" name="aprobado" value="-1" autocomplete="off">

                           <%= radio_button_tag 'negarlo', -1 %>
                        </label>
                        <label class="btn del-primary">
                           <input type="radio" name="aprobado" value="1" autocomplete="off" checked>

                           <%= radio_button_tag 'aprobado',1 %>
                        </label>
                     </div>
                 </div>
	  					<div class="form-group">
								<div class="row form-group">
								<div class="col-md-4">
									<div class= "gratis">
										<label>
											 <input <%= form.radio_button(:aprobado, -1, :checked => (params[:aprobado] == -1)) %>

											<p>
												Negar cambios
											</p>

										</label>

								</div>
								</div>
								<div class="col-md-4">
									<div class= "basico">
										<label>
											 <input <%= form.radio_button(:aprobado, 1, :checked => (params[:aprobado] == 1)) %>

											<p>
												Aceptar cambios
											</p>

										</label>
								</div>
								</div>

							</div>
	  				  </div>
	  					<br>
	  					<div class="form-group">

								<%@aceptar = :version_negocio_aprobado%>
								<%= form.label :descripcion, id: params[:descripcion] %>
	              <%= text_field_tag(:descripcion,@negocio_o.descripcion, class:'form-control', id:'descripcion') %>
	  				  </div>
	  					<br>


	          </div>

						<div class="row">
						<div class="col-md-12">

							<div class="row">

	  						<div class="col-md-6">

	  							<button type="button" class="btn btn-default">
	  								<%= link_to "Regresar", :controller => "version_negocios", :action => "index" %>
	  							</button>
	  						</div>
	  						<div class="col-md-6">
	                <div class="actions">

	                  <%=form.submit ("Aceptar")%>
	                </div>
	  						</div>
	  					</div>
						</div>
					</div>
	  		</div>
	  	</div>
	  </div>
	</div>


<% end %>
