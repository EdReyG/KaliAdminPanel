<style>

  *{
  box-sizing: border-box;
  text-align: justify;
}

#main-header{
  padding-top: 0%;
  margin-top: -2%;
}

.fBlanco{
  background-color: white;
}

.nuevoUsuario{
  background-color: white;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  box-shadow: 0 0 10px rgba(0,0,0,.2);
  padding: 2%;
  margin-top: 2%;
}

.naranja{
  color:orange;
  text-align: center;
  margin: 0%;
  margin-top: -3%;
}

.botonesDecision{
  float: right;
  margin-left: 20%;
  width: 45%;
}

.cuerpoUsuario{
  clear: both;
  padding-top: 1.5%;
  margin-bottom: 27%;
  height: auto;

}

#btAceptar{
  margin-left: 25%;
  background-color: green;
}

#btRechazar{
  float: right;
  background-color: red;
}

.btUsu{
  text-align: center;
  color:white;
  border:none;
  border-radius: 3px;
  font-size: 110%;
  width: 30%;
  height: 30px;
}


#btAceptar:hover{
  border:2px;
  border-color: green;
  background-color: white;
  color: green;
  cursor: pointer;
  border: 2px solid green;
}


#btRechazar:hover{
  background-color: white;
  color: red;
  cursor: pointer;
  border: 2px solid red;
}

#fotoUsuario{
  margin-top: 1.6%;
  float: left;
  width: 35%;
  height: 400px;
  background-color: orange;
  padding: 10px;
}

#datosUsuario{
  float: left;
  width: 85%;
  margin-left: 5%;
  padding: 10px;
}

.etiquetas{
  font-size: 150%;
  float: left;
  clear: left;
  margin-bottom: 2%;
}

.cajita{
  margin-left: 5%;
  width: 95%;
  background-color: #EF9A02;
  padding: 0.5%;
}

/*
Para el cambio de los tamaños de las pantallas

*/

@media screen and (max-width: 1200px){


  #fotoUsuario{
  float: left;
  width: 35%;
  height: 360px;
  background-color: orange;
  padding: 10px;
}
}

@media screen and (max-width: 1100px){



  #fotoUsuario{
  margin-top: 1%;
  float: left;
  width: 35%;
  height: 360px;
  background-color: orange;
  padding: 10px;
}

#datosUsuario{
  margin-top: 1%;
  float: left;
  width: 85%;
  margin-left: 5%;
  padding: 10px;
}

}


@media screen and (max-width: 800px){

  #fotoUsuario{
  margin-top: 6%;
  float: left;
  width: 35%;
  height: 300px;
  background-color: orange;
  padding: 10px;
}

  .etiquetas{
    margin-top: 2%;
    margin-bottom: 2%;
  }

}



@media screen and (max-width: 500px){
  .botonesDecision{
    margin-top: 5%;
    float: none;
    width: 70%;
  }

  #btAceptar{
  margin-left: 12%;
  background-color: green;
  margin-right: 0%;
  }

  #btRechazar{
  background-color: red;
  float: none;
  margin-left: 0%;
  }

  .naranja{
    float: none;
    font-size: 160%;
  }

  #fotoUsuario{
  margin-top: 5%;
  float: none;
  width: 35%;
  margin-left: 32.5%;
  margin-right: 32.5%;
  height: 150px;
  background-color: orange;
  }

  #datosUsuario{
    margin-top: 2.5%;
  float: none;
  width: 100%;
  margin-left: 0%;
  padding: 10px;
  }

  .etiquetas{
    font-size: 100%;
  }
}

.foto{
  width: 300px;
  height: 300px;
}

</style>



<p id="notice"><%= notice %></p>


<body>
<br />
<header id="main-header">

    <a id="logo-header" class="ocultar" >
      <span class="site-name">Usuarios</span>
      <span class="site-desc"><%= @usuario.name %> <%= @usuario.apellidos %></span>
    </a> <!-- / #logo-header -->

    <nav>
      <ul>
        <li id = "op4"><a><%= link_to "Inicio", :controller => "inicio", :action => "opciones" %></a></li>
      </ul>
    </nav><!-- / nav -->

  </header><!-- / #main-header -->

<section id = "nuevoUsuario">
  <article>
  <h1 class="naranja" >DATOS DEL USUARIO</h1>

  <div class = "cuerpoUsuario">
    <div id = "datosUsuario">
  <%begin%>
  <!--Aqui pongo el despliegue de la foto-->
  <!--Se logra gracias a lo que esta en el controlador-->
    <img src="/<%=@usuario.foto%>" width="50px">
    <br>
  <%rescue%>
  <%end%>


      <br>
      <label class = "etiquetas">Nombre</label>
      <a class = "etiquetas cajita"><%= @usuario.name %></a>
      <label class = "etiquetas">Apellidos</label>
      <a class = "etiquetas cajita"><%= @usuario.apellidos %></a>
      <label class = "etiquetas">Correo electrónico</label>
      <a class = "etiquetas cajita"><%= @usuario.email %></a>
      <label class = "etiquetas">Teléfono</label>
      <a class = "etiquetas cajita"> <%= @usuario.celular %> </a>
      <label class = "etiquetas">Activo</label>
      <%if @usuario.activo%>
        <a class = "etiquetas cajita">Sí</a>
      <%else%>
        <a class = "etiquetas cajita">No</a>
      <%end%>

  </article>

</section>



<div id = "datosUsuario">
  <button class="btn-warning"><%= link_to 'Editar', edit_user_path(@usuario)%></button>
 |

<%if @usuario.activo%>
<button class = "btn-warning"><%= link_to 'Regresar', {:controller => "users", :action => "index"}%></button>

<%else%>
<button class="btn-warning"><%= link_to 'Regresar', {:controller => "rechazados", :action => "users"} %></button>

<%end%>



</div>




</body>
