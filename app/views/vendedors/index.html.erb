<header id="main-header">

    <a id="logo-header" class="ocultar" >
      <span class="site-name">Vendedores Registrados</span>
      <span class="site-desc">Lista</span>
    </a> <!-- / #logo-header -->

    <nav>
      <ul>
        <li id = "op4"><a><%= link_to "Regresar", :controller => "inicio", :action => "opciones" %></a></li>
