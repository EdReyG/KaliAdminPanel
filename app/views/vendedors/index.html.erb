<section id="main-content">

  
    <article id = "primer">
      <header>
        <h1>VENDEDORES CON CODIGO</h1>
      </header>
      <br><br><br>
        <ul>
          <% @vendedors.each do |vendedor| %>
          <li>
            <span id = "nombre"><%=vendedor.usuario.nombre_usuario%> <%=vendedor.usuario.apellidos%></span>
            <span id = "correo">Codigo: <%=vendedor.codigo%></span>
            <button id = "btIr">
                    <%= link_to 'Ver Ventas', vendedor %> 
            </button>
          </li>
          <% end %>
        </ul>
    </article> <!-- /article -->
  
</section>


