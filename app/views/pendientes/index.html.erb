<section id="main-content">


    <article id = "primer">
      <header>
      <div>
        </div>
        <h1 class>NEGOCIOS PENDIENTES</h1>
      </header>
      <br><br><br>

      <%if @negocios.length >0%>

        <ul>
          <% @negocios.each do |negocio| %>
          <li>
            <span id = "nombre"><%=negocio.nombre_empresa%></span>
            <span id = "correo">Propietario: <%= negocio.usuario.nombre_usuario %> <%= negocio.usuario.apellidos %></span>
            <button id = "btIr">
                    <%= link_to 'Ver Perfil', negocio %>
            </button>

          </li>
          <% end %>
        </ul>

        <%else%>
              <h1>No hay negocios con solicitudes pendientes...</h1>
        <%end%>
    </article> <!-- /article -->

</section>

<section id="main-content">
    <article id = "primer">
      <header>
      <div>
        </div>
        <h1>PROMOCIONES PENDIENTES</h1>
      </header>
      <br><br><br>
    <%if @promociones.length >0%>
        <ul>
          <% @promociones.each do |promocion| %>
          <li>
            <span id = "nombre"><%=promocion.nombre%> </span>
            <span id = "correo">Negocio: <%= promocion.negocio.nombre_empresa %></span>
            <button id = "btIr">
                    <%= link_to 'Ver Promocion', promocion %>
            </button>
          </li>
          <% end %>
        </ul>
        <%else%>
              <h1>No hay promociones con solicitudes pendientes...</h1>
        <%end%>
    </article> <!-- /article -->

</section>

<section id="main-content">
    <article id = "primer">
      <header>
      <div>
      <%=link_to "Actualizaciones rechazadas", {controller: "rechazados", action: "actualizaciones"}, class: "rojo"%>
        </div>
        <h1>ACTUALIZACIONES PENDIENTES</h1>
      </header>
      <br><br><br>
    <%if @actualizaciones.length >0%>
      <ul>
          <% @actualizaciones.each do |actualizacion| %>
          <li>
            <span id = "nombre">Negocio: <%=Negocio.find(actualizacion.negocio.id).nombre_empresa%></span>

            <button id = "btIr">
                    <%= link_to 'Ver Perfil', actualizacion %>
            </button>
          </li>
          <% end %>
        </ul>
        <%else%>
              <h1>No hay actualizaciones de negocios pendientes...</h1>
        <%end%>
