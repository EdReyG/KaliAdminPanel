
<style>

  *{
  box-sizing: border-box;
  text-align: justify;
}
#main-header{
  padding-top: 0%;
  margin-top: -2%;
}
.fBlanco{
  background-color: white;
}
.nuevoUsuario{
  background-color: white;
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  box-shadow: 0 0 10px rgba(0,0,0,.2);
  padding: 2%;
  margin-top: 2%;
}
.naranja{
  color:orange;
  text-align: center;
  margin: 0%;
  margin-top: -3%;
}
.botonesDecision{
  float: right;
  margin-left: 20%;
  width: 45%;
}
.cuerpoUsuario{
  clear: both;
  padding-top: 1.5%;
  margin-bottom: 27%;
  height: auto;
}
#btAceptar{
  margin-left: 25%;
  background-color: green;
}
#btRechazar{
  float: right;
  background-color: red;
}
.btUsu{
  text-align: center;
  color:white;
  border:none;
  border-radius: 3px;
  font-size: 110%;
  width: 30%;
  height: 30px;
}
#btAceptar:hover{
  border:2px;
  border-color: green;
  background-color: white;
  color: green;
  cursor: pointer;
  border: 2px solid green;
}
#btRechazar:hover{
  background-color: white;
  color: red;
  cursor: pointer;
  border: 2px solid red;
}
#fotoUsuario{
  margin-top: 1.6%;
  float: left;
  width: 35%;
  height: 400px;
  background-color: orange;
  padding: 10px;
}
#datosUsuario{
  float: left;
  width: 85%;
  margin-left: 5%;
  padding: 10px;
}
.etiquetas{
  font-size: 150%;
  float: left;
  clear: left;
  margin-bottom: 2%;
}
.cajita{
  margin-left: 5%;
  width: 95%;
  background-color: #FFCC80;
  padding: 0.5%;
}
/*
Para el cambio de los tamaños de las pantallas
*/
@media screen and (max-width: 1200px){
  #fotoUsuario{
  float: left;
  width: 35%;
  height: 360px;
  background-color: orange;
  padding: 10px;
}
}
@media screen and (max-width: 1100px){
  #fotoUsuario{
  margin-top: 1%;
  float: left;
  width: 35%;
  height: 360px;
  background-color: orange;
  padding: 10px;
}
#datosUsuario{
  margin-top: 1%;
  float: left;
  width: 85%;
  margin-left: 5%;
  padding: 10px;
}
}
@media screen and (max-width: 800px){
  #fotoUsuario{
  margin-top: 6%;
  float: left;
  width: 35%;
  height: 300px;
  background-color: orange;
  padding: 10px;
}

  .etiquetas{
    margin-top: 2%;
    margin-bottom: 2%;
  }
}
@media screen and (max-width: 500px){
  .botonesDecision{
    margin-top: 5%;
    float: none;
    width: 70%;
  }
  #btAceptar{
  margin-left: 12%;
  background-color: green;
  margin-right: 0%;
  }
  #btRechazar{
  background-color: red;
  float: none;
  margin-left: 0%;
  }
  .naranja{
    float: none;
    font-size: 160%;
  }
  #fotoUsuario{
  margin-top: 5%;
  float: none;
  width: 35%;
  margin-left: 32.5%;
  margin-right: 32.5%;
  height: 150px;
  background-color: orange;
  }
  #datosUsuario{
    margin-top: 2.5%;
  float: none;
  width: 100%;
  margin-left: 0%;
  padding: 10px;
  }
  .etiquetas{
    font-size: 100%;
  }
}
</style>



<p id="notice"><%= notice %></p>


<body class = "fBlanco">

<header id="main-header">

    <a id="logo-header" class="ocultar" >
      <span class="site-name">Promocion</span>
      <span class="site-desc"><%= @promocion.nombre %> </span>
    </a> <!-- / #logo-header -->

    <nav>
      <ul>
        <li id = "op4"><a><%= link_to "Inicio", :controller => "inicio", :action => "opciones" %></a></li>
      </ul>
    </nav><!-- / nav -->

  </header><!-- / #main-header -->



<section id = "nuevoUsuario">
  <article>
  <h1 class="naranja" >DATOS DE LA PROMOCION</h1>

  <div class = "cuerpoUsuario">

    <div id = "datosUsuario">

      <%begin%>
  <!--Aqui pongo el despliegue de la foto-->
  <!--Se logra gracias a lo que esta en el controlador-->
    <img src="/<%=@promocion.poster%>" width="50px">
    <br>
  <%rescue%>
  <%end%>


      <label class = "etiquetas">Promocion:</label>
      <a class = "etiquetas cajita"><%= @promocion.nombre %></a>
      <label class = "etiquetas">Descripcion</label>
      <a class = "etiquetas cajita"><%= @promocion.descripcion %></a>
      <label class = "etiquetas">Negocio:</label>
      <a class = "etiquetas cajita"><%= @promocion.negocio.nombre_empresa %></a>
      <label class = "etiquetas">Fecha de Registro:</label>
      <a class = "etiquetas cajita"> <%= @promocion.fecha_registro %> </a>
      <label class = "etiquetas">Activa:</label>
      <%if @promocion.aprobada==1%>
        <a class = "etiquetas cajita">Sí</a>
      <%else%>
        <a class = "etiquetas cajita">No</a>
      <%end%>
    </div>

  </div>
  </article>

</section>



<div id = "datosUsuario">
<%= link_to 'Editar', edit_promocion_path(@promocion) %> |

<% if @promocion.aprobada ==1%>

  <%= link_to 'Regresar', promocions_path %>

  <%else%>
    <% if @promocion.aprobada ==-1%>
      <%= link_to 'Regresar',{:controller => "rechazados", :action => "promociones"} %>
    <%else%>
      <%= link_to 'Regresar',{:controller => "pendientes", :action => "index"} %>
    <%end%>
  <%end%>

<% if @promocion.aprobada ==-1%>

<br><br>
  <%= link_to 'Eliminar', @promocion, method: :delete, data: { confirm: 'Desea eliminar la promocion?' } %>
</div>

<%end%>



</body>
