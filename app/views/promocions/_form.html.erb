<center style="padding-top: 40px;">
<%= form_with(model: promocion, local: true) do |form| %>
  <% if promocion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(promocion.errors.count, "error") %> prohibited this promocion from being saved:</h2>

      <ul>
      <% promocion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row" style="width: 40%; padding: 15px;">
    <div class="col-md-6"><%= form.label :nombre %></div>
    <div class="col-md-6"><%= form.text_field :nombre, id: :promocion_nombre%></div>
  </div>

  <div class="field row" style="width: 40%; padding: 15px;">
    <div class="col-md-6"><%= form.label :descripcion %></div>
    <div class="col-md-6"><%= form.text_field :descripcion, id: :promocion_descripcion %></div>
  </div>

  <center><label>Escriba:</label><br>
  <label>1 para Aceptarla</label><br>
  <label>-1 para darla de BAJA o rechazarla</label><br></center>
  <div class="field row" style="width: 40%; padding: 15px;">
    <div class="col-md-6"><%= form.label :aprobada %></div>
    <div class="col-md-6"><%= form.number_field :aprobada, id: :promocion_aprobada %></div>
  </div>

  <div class="field row" style="width: 40%; padding: 15px;">
    <div class="col-md-6"><% form.label :poster , class: 'oculto-casi'%></div>
    <div class="col-md-6"><% form.text_field :poster, {id: :promocion_poster, class: 'oculto-casi'}%></div>
  </div>

  <div class="field row" style="width: 60%; padding: 15px;">
    <div class="col-md-6"><%= form.label :fecha_registro %></div>
    <div class="col-md-6"><%= form.datetime_select :fecha_registro, id: :promocion_fecha_registro %></div>
  </div>

  <div class="field row" style="width: 40%; padding: 15px;">
    <div class="col-md-6"><%= form.label :negocio_id %></div>
    <div class="col-md-6"><%=form.collection_select(:negocio_id, Negocio.all, :id,:nombre_empresa, prompt: "Selecciona la empresa que desees", class: 'grande_l') %></div>

  </div>
  <div class="actions">
    <%= form.submit("Aceptar") %>
  </div>
<% end %>
</center>
